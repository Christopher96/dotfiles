#!/bin/python

import requests, sys

def main(argv):
    currency = ""
    if(len(sys.argv) > 1):
        currency = sys.argv[1]
    r = requests.get('https://api.coinmarketcap.com/v1/ticker/'+currency);
    ticker = r.json()

    if "error" not in ticker:
        print('$%.2f' % float(ticker[0]['price_usd']))

if __name__ == "__main__":
    main(sys.argv[1:])
