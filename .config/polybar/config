[colors]
background = ${xrdb:polybar.background:#000000}
background_alt = ${xrdb:polybar.background_alt:#000000}
foreground = ${xrdb:polybar.foreground:#ffffff}
foreground_alt = ${xrdb:polybar.foreground_alt:#ffffff}
transparent = ${xrdb:polybar.transparent:#ffffff}
selected = ${xrdb:polybar.selected:#ffffff}

[bar/parent]
font-0 = ${xrdb:polybar.font:pixelsize=12}
font-1 = unifont:fontformat=truetype:size=10:antialias=false;0
font-2 = fontawesome:pixelsize=12;1

width = 100%
height = 35

fixed-center = true

offset-y = 0
radius = 0

;background-0 = #070421
;background-1 = #0b0420
;background-2 = #FF130630
;background-3 = #F21a0739
;background-4 = #D91e0946
;background-5 = #BF2c0a53
;background-6 = #A6350a53
;background-7 = #803e0a53
;background-8 = #4D400a53
;background-9 = #1A490a53
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.selected}

;border-left-size = 11
;order-top-size = 0
;order-right-size = 11
border-bottom-size = 0

;bottom = true

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/top]
inherit = bar/parent
monitor = ${env:MONITOR:LVDS-1}

modules-left = i3 windows
modules-center = xwindow
modules-right = weather date

[bar/bottom]
inherit = bar/parent
monitor = ${env:MONITOR:LVDS-1}

modules-left = crypto 
modules-right = mpv

bottom = true

; ------- MODULES --------

[module/windows]
type = custom/script
interval = 0.1
label = %output% 
exec = ~/.config/polybar/bin/windows.sh -m "LVDS-1"

[module/ip]
type = custom/script
; format-underline = ${colors.foreground_alt}
lnterval = 1200
label = %output%
exec = ~/.config/polybar/bin/ip.sh
click-left = ~/.config/polybar/bin/ip.sh --public

[module/crypto]
type = custom/script
interval = 5
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
label = %output%
exec = ~/.config/polybar/bin/crypto.py bitcoin ethereum iota eos request-network

[module/mpv]
type = custom/script

exec = sh ~/.config/polybar/bin/mpv.sh
exec-if = pgrep -x mpv 
interval = 1

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}

label = %output%

[module/pavolume]
type = custom/script
;format-underline = ${colors.foreground_alt}
enterval = 1
label = %output%
exec = ~/.config/polybar/bin/pavolume.sh
click-right = exec pavucontrol
click-left = ~/.config/polybar/bin/pavolume.sh --togmute
scroll-up = ~/.config/polybar/bin/pavolume.sh --up
scroll-down = ~/.config/polybar/bin/pavolume.sh --down

[module/mail]
type = custom/script
interval = 1200
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
exec = ~/.config/polybar/bin/mail.sh

[module/trash]
interval = 10
;format-underline = ${module/bspwm.label-focused-underline}
type = custom/script
exec = ~/.config/polybar/bin/trash.sh
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
click-right = rm -rf ~/.local/share/Trash/files/* ;exec paplay /usr/share/sounds/freedesktop/stereo/trash-empty.oga
click-left = thunar ~/.local/share/Trash/files

[module/weather]
type = custom/script
;format-underline = ${module/bspwm.label-focused-underline}
interval = 100
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
exec = ~/.config/polybar/bin/weather.py

[module/pkg]
type = custom/script
;format-underline = ${module/bspwm.label-focused-underline}
interval = 1200
format = <label>
;format-underline = #dc322f
label = "%output:0:30%"
exec = ~/.config/polybar/bin/pkg.sh
click-left = ~/.config/polybar/bin/pkg.sh --upgrade

[module/xwindow]
type = internal/xwindow
;format-underline = ${module/bspwm.label-focused-underline}
label = %title:0:100:...%
;format-foreground = ${colors.selected}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
;format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted = <label-mounted>
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground_alt}
label-mounted = %percentage_used%%
label-unmounted = %mountpoint% not mounted

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline= ${colors.foreground_alt}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.selected}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground_alt}
label-empty-padding = 2

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
wrapping-scroll = false

ws-icon-default = 

label-mode-padding = 0
label-mode-foreground = #000

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${module/bspwm.label-focused-foreground}
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev =
icon-stop =
icon-play =
icon-pause =
icon-next =

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground_alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
;format-underline = ${colors.foreground_alt}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
;format-underline = ${colors.foreground_alt}
fabel = %percentage_used%%

[module/wlan]
type = internal/network
interface = net1
interval = 3.0
format-connected = <ramp-signal> <label-connected>
format-underline = ${colors.foreground_alt}
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground_alt}

ramp-coreload-0 = 
ramp-coreload-1 = 
ramp-coreload-2 = 
ramp-coreload-3 = 
ramp-coreload-4 = 
ramp-coreload-5 = 
ramp-coreload-6 = 
ramp-coreload-7 = 
ramp-signal-foreground = ${colors.foreground_alt}

[module/eth]
type = internal/network
interface = enp6s0
interval = 3.0

label-connected = %local_ip%

;format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground_alt}
;format-connected-underline = #f50a6c

format-disconnected = 
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground_alt}

[module/date]
type = internal/date
;format-underline = ${colors.foreground_alt}
interval = 1

date =
date-alt = " %Y/%m/%d %A"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground_alt}
;format-underline = #0a6cf5

label = %date% %time%

[module/volume]
type = internal/volume
label-muted-underline = ${colors.foreground_alt}
format-underline = ${colors.foreground_alt}
format-volume = <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground_alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.foreground}
bar-volume-foreground-1 = ${colors.foreground}
bar-volume-foreground-2 = ${colors.foreground}
bar-volume-foreground-3 = ${colors.foreground}
bar-volume-foreground-4 = ${colors.foreground}
bar-volume-foreground-5 = ${colors.foreground}
bar-volume-foreground-6 = ${colors.foreground}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground_alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground_alt}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
;label-open-foreground = ${colors.secondary}
label-close = Cancel
;label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground_alt}

menu-0-0 = Reboot
menu-0-0-exec = menu-open-1
menu-0-1 = Shutdown
menu-0-1-exec = menu-open-2

menu-1-0 = Cancel
menu-1-0-exec = menu-open-0
menu-1-1 = Shutdown
menu-1-1-exec = sudo reboot

menu-2-0 = Shutdown
menu-2-0-exec = sudo shutdown -h now
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

