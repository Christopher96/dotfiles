[colors]
background = ${xrdb:polybar.background:#000000}
background_alt = ${xrdb:polybar.background_alt:#000000}
foreground = ${xrdb:polybar.foreground:#ffffff}
foreground_alt = ${xrdb:polybar.foreground_alt:#ffffff}
selected = ${xrdb:polybar.selected:#ffffff}

[bar/parent]
font-0 = ${xrdb:polybar.font_0}
font-1 = ${xrdb:polybar.font_1}
font-2 = ${xrdb:polybar.font_2}

width = 100%
height = 30

fixed-center = true

offset-y = 0
radius = 0

;background-0 = #070421
;background-1 = #0b0420
;background-2 = #FF130630
;background-3 = #F21a0739
;background-4 = #D91e0946
;background-5 = #BF2c0a53
;background-6 = #A6350a53
;background-7 = #803e0a53
;background-8 = #4D400a53
;background-9 = #1A490a53
background = #00000000
foreground = ${colors.foreground}

line-size = 6
line-color = ${colors.selected}

border-left-size = 10
border-right-size = 10
border-top-size = 10
border-bottom-size = -5

;bottom = true

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/DVI-I-1]
inherit = bar/parent
monitor = ${env:MONITOR:DVI-I-1}

modules-left = i3 w1
modules-center = xwindow
modules-right = ramp-left wlan eth
;pkg mail trash 
[bar/HDMI-0]
inherit = bar/parent
monitor = ${env:MONITOR:HDMI-0}

modules-left = i3 w2
modules-center = xwindow
modules-right = weather date 

[bar/HDMI-0-bottom]
inherit = bar/parent
monitor = ${env:MONITOR:HDMI-0}
bottom = true

modules-left = crypto

[bar/DP-5]
inherit = bar/parent
monitor = ${env:MONITOR:DP-5}
modules-left = i3 w3
modules-center = xwindow
modules-right = mpv pavolume volume

;tray-position = right
;tray-padding = 10
;tray-transparent = true
tray-background = ${colors.foreground}


; ------- MODULES --------

[module/windows]
type = custom/script
interval = 0.1
label = %output% 

[module/w1]
inherit = module/windows
exec = ~/.config/polybar/bin/windows.sh -m "DVI-I-1"

[module/w2]
inherit = module/windows
exec = ~/.config/polybar/bin/windows.sh -m "HDMI-0"

[module/w3]
inherit = module/windows
exec = ~/.config/polybar/bin/windows.sh -m "DP-5"

[module/ramp-left]
type = custom/text

content = %{T2}◢%{T-}
content-font = 2
content-foreground = ${colors.foreground_alt}
; content-background = #00a0000a
content-padding = 0

[module/ramp-right]
type = custom/text

content = %{T2}◤%{T-}
content-font = 2
content-foreground = ${colors.foreground_alt}
; content-background = #00a0000a
content-padding = 0

[module/ip]
type = custom/script
; format-underline = ${colors.foreground_alt}
lnterval = 1200
label = %output%
exec = ~/.config/polybar/bin/ip.sh
click-left = ~/.config/polybar/bin/ip.sh --public

[module/crypto]
type = custom/script
interval = 5
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
label = %output%
exec = ~/.config/polybar/bin/crypto.py bitcoin ethereum litecoin iota eos request-network icon cindicator aion cardano kucoin-shares

[module/mpv]
type = custom/script

exec = sh ~/.config/polybar/bin/mpv.sh
exec-if = pgrep -x mpv 
interval = 1

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}

label = %output%

[module/pavolume]
type = custom/script
;format-underline = ${colors.foreground_alt}
enterval = 1
label = %output%
exec = ~/.config/polybar/bin/pavolume.sh
click-right = exec pavucontrol
click-left = ~/.config/polybar/bin/pavolume.sh --togmute
scroll-up = ~/.config/polybar/bin/pavolume.sh --up
scroll-down = ~/.config/polybar/bin/pavolume.sh --down

[module/mail]
type = custom/script
interval = 1200

format = " "<label>

format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.foreground_alt}

exec = ~/.config/polybar/bin/mail.sh

[module/trash]
interval = 10
type = custom/script

format = " "<label>
exec = ~/.config/polybar/bin/trash.sh

format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.foreground_alt}

label-underline = ${colors.foreground_alt}

click-right = rm -rf ~/.local/share/Trash/files/* ;exec paplay /usr/share/sounds/freedesktop/stereo/trash-empty.oga
click-left = thunar ~/.local/share/Trash/files

[module/weather]
type = custom/script
interval = 100
format = " "<label>

format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.foreground_alt}

exec = ~/.config/polybar/bin/weather.py

[module/pkg]
type = custom/script
interval = 1200
format = <label>
;format-underline = #dc322f
label = "%output:0:30%"
exec = ~/.config/polybar/bin/pkg.sh
click-left = ~/.config/polybar/bin/pkg.sh --upgrade

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
;format-foreground = ${colors.selected}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground_alt}
;format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted = <label-mounted>
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground_alt}
label-mounted = %percentage_used%%
label-unmounted = %mountpoint% not mounted

[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state>

label-focused = %icon%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}

; label-separator = 
; label-separator-padding = 2
; label-separator-foreground = #ffb52a
;
; label-unfocused = %icon%
; label-unfocused-foreground = ${colors.foreground}
;
; label-visible = %icon%
;
; label-urgent = %icon%
; label-urgent-foreground = ${colors.foreground}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev =
icon-stop =
icon-play =
icon-pause =
icon-next =

label-song-maxlen = 25
label-song-ellipsis = true

