exec_always nitrogen --restore
exec_always compton --config ~/.config/compton.conf

exec --no-startup-id polybar -r DP-5
exec --no-startup-id polybar -r HDMI-0
exec --no-startup-id polybar -r DVI-I-1
exec --no-startup-id ckb --background
exec ~/.config/i3/bin/cavai3ipc.py DVI-I-1
